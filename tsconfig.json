{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/fe", "src/fe/**/*.ts", "src/fe/**/*.tsx", "src/be", "src/be/**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
