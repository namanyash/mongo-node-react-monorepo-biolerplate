{
  "name": "rundown-dashboard",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev:be": "nodemon --exec tsx src/be/index.ts",
    "dev:fe": "vite",
    "dev": "concurrently --kill-others-on-fail \"npm run dev:be\" \"npm run dev:fe\"",
    "build:fe": "vite build",
    "build:be": "tsc --project tsconfig.json",
    "build": "npm run build:fe && npm run build:be",
    "start": "npm run build:fe && node dist/index.js",
    "start:dev": "npm run build:fe && tsx src/be/index.ts"
  },
